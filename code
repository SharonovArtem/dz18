using System;
using System.Collections.Generic;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;
using System.Web;
using static System.Net.WebRequestMethods;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            string brackets = "(((())(((((())))))()))";
            char leftBracket = '(';
            char rightBracket = ')';
            int rightStringCheck = 0;
            int tempDepth = 0;
            int depth = 0;
            int stringCheck = 0;

            for (int i = 0; i < brackets.Length; i++)
            {
                if (brackets[i] == leftBracket)
                {
                    stringCheck++;
                    depth++;

                    if (brackets[i + 1] == rightBracket && brackets[i] ==leftBracket && i + 1 != brackets.Length + 1 && depth > tempDepth)
                    {
                        tempDepth = depth;
                        depth = 0;
                    }
                }
                else if(brackets[i] == rightBracket)
                {
                    stringCheck--;
                }
            }

            if (stringCheck == rightStringCheck)
            {
                Console.WriteLine("Строка верная, максимальная вложенность: " + tempDepth);
            }
            else
            {
                Console.WriteLine("Строка неверная");
            }
        }
    }
}
